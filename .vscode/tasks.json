  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "ng serve",
      "type": "shell",
      "command": "ng serve",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "npm run start",
      "type": "npm",
      "script": "start",
      "options": {
        "cwd": "${workspaceFolder}/api"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}